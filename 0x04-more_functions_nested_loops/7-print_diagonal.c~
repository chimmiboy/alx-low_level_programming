#include "main.h"

/**
 * print_diagonal - a function that draws a diagonal line in the terminal
 * @n: input number of times to print '\'
 * Return: a diagonal line
 */

void print_diagonal(int n)
{
	int x, y;

	if (n <= o)
	{
		_putchar('\n');
	}
	else
	{
		for (x = 0; x < n; x++)
		{
			for (y = 0; y < x; y++)
			{
				_putchar(' ');
			}
			_putchar('\\');
			_putchar('\n');
		}
	}
}
